<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Create Alumni</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/home">Home</a></li>
                        <li class="breadcrumb-item active">Create alumni</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <section class="content">
        <div class="card">
            <div class="card-body">
                <div class="col-md-6">
                    <div class="card card-primary">
                        <form action="/create/alumni" method="POST">
                            <div class="card-body">
                                {{#if error}}
                                <div class="alert alert-danger" role="alert">
                                    {{error}}
                                </div>
                                {{/if}}
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" class="form-control" name="name" placeholder="Enter the name" required>
                                </div>
                                <div class="form-group">
                                    <label>Surname</label>
                                    <input type="text" class="form-control" name="surname" placeholder="Enter the surname" required>
                                </div>
                                <div class="form-group">
                                    <label>Course</label>
                                    <select name="course" class="form-control">
                                        <option selected>Select a season</option>
                                        {{#each course}}
                                            <option value="{{this.season}}">{{this.season}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>

                            <div class="card-footer">
                                <a href="/alumni">
                                    <div class="btn btn-secondary">Back</div>
                                </a>
                                <button class="btn btn-success float-right">Create</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </section>