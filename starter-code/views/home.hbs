<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Users</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/home">Home</a></li>
                        <li class="breadcrumb-item active">Users</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="card-title">
                {{#is currentUser.role 'Boss'}}
                    <a href="/create/user" class="nav-link"><button class="btn btn-primary">Create user</button></a>
                {{/is}}
            </div>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip"
                    title="Collapse">
                    <i class="fas fa-minus"></i></button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip"
                    title="Remove">
                    <i class="fas fa-times"></i></button>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                {{#is currentUser.role 'Boss'}}
                    <thead>
                        <tr>
                            <th style="width: 20%;">Name</th>
                            <th style="width: 20%;">Surname</th>
                            <th style="width: 20%;">Username</th>
                            <th style="width: 20%;">Role</th>
                            <th style="width: 10%;" class="btn-table">Edit</th>
                            <th style="width: 10%;" class="btn-table">Delete</th>
                        </tr>
                    </thead>
                    {{#each user}}
                        <tbody>
                            <tr class="row-table">
                                <td class="field-table">{{this.name}}</td>
                                <td class="field-table">{{this.surname}}</td>
                                <td class="field-table">{{this.username}}</td>
                                <td class="field-table">{{this.role}}</td>
                                <td class="btn-table"><a href="/edit/user/{{this._id}}"><button class="btn btn-warning btn-sm">Edit</button></a></td>
                                <td class="btn-table">
                                    <form action="/delete/{{this._id}}" method="POST">
                                        <button class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        </tbody>
                    {{/each}}
                {{else}}
                    <thead>
                        <tr>
                            <th style="width: 20%;">Name</th>
                            <th style="width: 20%;">Surname</th>
                            <th style="width: 20%;">Username</th>
                            <th style="width: 20%;">Role</th>
                        </tr>
                    </thead>
                    {{#each user}}
                        <tbody>
                            <tr class="row-table">
                                <td class="field-table">{{this.name}}</td>
                                <td class="field-table">{{this.surname}}</td>
                                <td class="field-table">{{this.username}}</td>
                                <td class="field-table">{{this.role}}</td>
                            </tr>
                        </tbody>
                    {{/each}}
                {{/is}}
            </table>
        </div>
    </div>

</section>

